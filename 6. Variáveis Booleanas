x = float(input('Digite o primeiro número: '))
y = float(input('Digite o segundo número: '))

soma = x + y
sub = x - y

print(f'Soma: {soma:.2f} | Subtração: {sub:.2f}')

testeA = soma > 10
testeB = sub < 0    
42
print(f'Soma: {soma:.2f} | Subtração: {sub:.2f}')
print(f'A soma é maior que 10? {testeA}')
print(f'A subtração é menor que 0? {testeB}')





