a= 1
b = 5

resposta_1 = a==b
resposta_2 = a != b
resposta_3 = a > b
resposta_4 = a < b
resposta = a >= b
resposta_6 = a <= b

print(resposta_1, resposta_2, resposta_3, resposta_4, resposta, resposta_6)

